<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="application">
    <target name="application">
        <!-- Create an application object if any-->
        <echo>Configuring application object with name '${application}'</echo>
        <ia-task self="applicationSelf">
            <object typeAlias="application" checkExistSpEL="?[name=='${application}']">
                <create>
                    <name>${application}</name>
                    <category>${category}</category>
                    <description>${description}</description>
                    <type>ACTIVE_ARCHIVING</type>
                    <archiveType>SIP</archiveType>
                </create>
            </object>
        </ia-task>
        <ia-use application="${application}" />
    </target>
</project>
