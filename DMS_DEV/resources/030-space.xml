<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="space">
    <target name="space">
        <!-- Create a space object if any-->
        <echo>Configuring space object with name '${application}-space'</echo>
        <ia-task self="spaceSelf">
            <object typeAlias="space" checkExistSpEL="?[name=='${application}-space']">
                <create>
                    <name>${application}-space</name>
                </create>
            </object>
        </ia-task>
        <ia-use space="${application}-space"/>
    </target>
</project>
