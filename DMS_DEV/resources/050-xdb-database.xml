<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="database">
    <target name="database">
        <!-- Create an xdb-database object if any-->
        <echo>Configuring xdb-database object with name '${xdbDatabase}'</echo>
        <ia-task self="dbSelf">
            <object typeAlias="xdb-database" checkExistSpEL="?[name=='${xdbDatabase}']">
                <create>
                    <name>${xdbDatabase}</name>
                    <adminPassword>${xdbPassword}</adminPassword>
                </create>
            </object>
        </ia-task>
    </target>
</project>
