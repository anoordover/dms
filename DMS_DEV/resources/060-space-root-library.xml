<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="space-root-library">
    <target name="space-root-library">
        <!-- Create a space-root-library object if any-->
        <echo>Configuring space-root-library object with name '${application}-space-root'</echo>
        <ia-task self="rootSelf">
            <object typeAlias="space-root-library" checkExistSpEL="?[name=='${application}-space-root-library']">
                <create>
                    <name>${application}-space-root-library</name>
                    <space>${spaceSelf}</space>
                    <xdbDatabase>${dbSelf}</xdbDatabase>
                </create>
            </object>
        </ia-task>

        <ia-use spaceRootLibrary="${application}-space-root-library"/>
    </target>
</project>
