<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="pdi-schema">
    <target name="pdi-schema">
        <!-- Create a PDI schema object if any-->
        <echo>Configuring pdi-schema object with name '${pdiSchema}'</echo>
        <ia-task self="pdiSchemaSelf">
            <object typeAlias="pdi-schema" checkExistSpEL="?[name=='${pdiSchema}']">
                <create>
                    <name>${pdiSchema}</name>
                    <format>xsd</format>
                </create>
                <content format="xsd" file="${basedir}/resources/content/pdi-schema.xsd"/>
            </object>
        </ia-task>
    </target>
</project>
