<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="pdi-crypto">
    <target name="pdi-crypto">
        <!-- Create a PDI Crypto object if any-->
        <echo>Configuring pdi crypto object with name '${holding}-pdi-crypto'</echo>
        <ia-task self="pdiCryptoSelf">
            <object typeAlias="pdi-crypto" checkExistSpEL="?[name=='${holding}-pdi-crypto']">
                <create>
                    <name>${holding}-pdi-crypto</name>
                </create>
                <content format="xml" file="${basedir}/resources/content/pdi-crypto.xml"/>
            </object>
        </ia-task>
    </target>
</project>
