        <echo>Configuring Retention Policy Objects</echo>
		<echo>Default Policy</echo>
        <ia-task self="policySelf">
			<object typeAlias="retention-policy" checkExistSpEL="?[name=='default_policy']">
				<create>
					<name>default_policy</name>
					<agingStrategy>
						<type>DURATION</type>
						<agingPeriod>
							<units>YEARS</units>
							<value>7</value>
						</agingPeriod>
					</agingStrategy>
					<dispositionStrategy>
